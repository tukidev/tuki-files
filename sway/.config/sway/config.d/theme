# Apply gtk theming
exec_always ~/.config/sway/scripts/import-gsettings

# Set inner/outer gaps
gaps inner 8
gaps outer 0

# Hide titlebar on windows:
default_border pixel 2

# Default Font
font pango:Noto Sans Regular 10

# Thin borders:
smart_borders on

# Set wallpaper:
exec swaybg -i ~/.config/sway/wallpaper.png -m fill

# Title format for windows
for_window [shell="xdg_shell"] title_format "%title (%app_id)"
for_window [shell="x_wayland"] title_format "%class - %title"

# Colors                border          bg              text        indi            childborder
client.focused          $mauve          $mauve          $base       $mauve           $mauve
client.focused_inactive $surface1       $mantle         $text       $base            $base
client.unfocused        $surface1       $mantle         $text       $base            $base
client.urgent           $base           $mantle         $red        $base            $base
client.background       $mantle

#
# Status Bar:
#
bar swaybar_command waybar
